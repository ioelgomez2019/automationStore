# Configuración de Ejemplo - Variables de Entorno
# Copiar este archivo a .env y modificar según necesidad

# ===== BASE DE DATOS / API =====
# BASE_URL=https://www.saucedemo.com
# API_BASE_URL=https://api.example.com

# ===== CREDENCIALES DE PRUEBA =====
# NOTA: No committear credenciales reales a Git
# TEST_USER=testuser
# TEST_PASSWORD=testpass

# ===== SELENIUM CONFIG =====
# Timeout explícito (segundos)
EXPLICIT_WAIT=10

# Timeout implícito (segundos)
IMPLICIT_WAIT=10

# Headless mode (no mostrar navegador)
HEADLESS=false

# ===== CHROME OPTIONS =====
# Desactivar password manager (evita popups)
DISABLE_PASSWORD_MANAGER=true

# Usar perfil temporal (más limpio)
USE_TEMP_PROFILE=true

# Desactivar leak detection
DISABLE_LEAK_DETECTION=true

# ===== REPORTES =====
# Generar reportes HTML
GENERATE_REPORTS=true

# Ruta de reportes
REPORTS_DIR=reports

# ===== LOGGING =====
# Nivel de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Guardar logs en archivo
SAVE_LOGS=false

# ===== SCREENSHOTS =====
# Capturar screenshot en cada paso
SCREENSHOT_EACH_STEP=false

# Capturar screenshot en error
SCREENSHOT_ON_ERROR=true

# ===== CI/CD =====
# Modo CI (sin interfaz gráfica)
CI_MODE=false

# Ejecutar en paralelo (número de workers)
PARALLEL_WORKERS=1

# ===== NOTIFICACIONES =====
# Enviar email con resultados (requiere configuración SMTP)
# SEND_EMAIL_REPORT=false
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
